{
  "compilerOptions": {
    /* ğŸ¯ Target & Module */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    /* ğŸ§± Bundler Mode (Vite, webpack 5+, etc.) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* ğŸ” Type Checking & Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ğŸ—ºï¸ Path Mapping (Optional but Recommended) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* ğŸ–¼ï¸ JSX Support (if using React, Vue, Solid, etc.) */
    "jsx": "react-jsx" // or "preserve" / "react" depending on framework
  },

  /* ğŸ“ Include Source Files */
  "include": ["src", "vite.config.ts"],

  /* ğŸš« Exclude node_modules and build folders */
  "exclude": ["node_modules", "dist", "build"]
}