{
  "compilerOptions": {
    /* 🎯 Target & Module */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    /* 🧱 Bundler Mode (Vite, webpack 5+, etc.) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* 🔍 Type Checking & Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* 🗺️ Path Mapping (Optional but Recommended) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* 🖼️ JSX Support (if using React, Vue, Solid, etc.) */
    "jsx": "react-jsx" // or "preserve" / "react" depending on framework
  },

  /* 📁 Include Source Files */
  "include": ["src", "vite.config.ts"],

  /* 🚫 Exclude node_modules and build folders */
  "exclude": ["node_modules", "dist", "build"]
}